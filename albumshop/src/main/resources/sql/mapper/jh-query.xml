<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bangshop.music.model.dao.OrderStorageMapper">
    <!-- 창고의 앨범 재고 조회 -->
    <select id="getAlbumStockByStorageNo" parameterType="int" resultType="map">
        SELECT
        a.album_no,
        a.album_name,
        e.name,
        a.singer,
        a.release_date,
        a.price,
        ast.stock
        FROM
        store s
        LEFT JOIN album_storage ast ON s.store_no = ast.storage_no
        LEFT JOIN album a ON ast.album_no = a.album_no
        LEFT JOIN employee e ON s.employee_no = e.employee_no
        WHERE
        e.employee_no = #{employeeNo};
    </select>

    <select id="findOrder" resultType="bangshop.music.model.dto.OrderDTO">
        select * from orders
    </select>

    <select id="findStorageStock" parameterType="String" resultType="bangshop.music.model.dto.AlbumStorageDTO">
        select * from album_storage where storage_no = #{number}
    </select>
</mapper>
