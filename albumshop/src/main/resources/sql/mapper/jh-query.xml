<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bangshop.music.model.dao.OrderStorageMapper">
    <!-- 직원의 창고 번호 가져오기 -->
    <select id="getStorageNoByEmployeeNo" parameterType="int" resultType="int">
        SELECT sa.storage_no
        FROM storage_admin sa
        WHERE sa.employee_no = #{employee_no}
    </select>

    <!-- 창고의 앨범 재고 조회 -->
    <select id="getAlbumStockByStorageNo" parameterType="int" resultType="map">
        SELECT
        a.album_no,
        a.album_name,
        a.singer,
        a.release_date,
        a.price,
        ast.stock
        FROM
        album a
        JOIN
        album_storage ast ON a.album_no = ast.album_no
        WHERE
        ast.storage_no = #{storage_no}
    </select>

    <select id="findOrder" resultType="bangshop.music.model.dto.OrderDTO">
        select * from orders
    </select>

    <select id="findStorageStock" parameterType="String" resultType="bangshop.music.model.dto.AlbumStorageDTO">
        select * from album_storage where storage_no = #{number}
    </select>
</mapper>
